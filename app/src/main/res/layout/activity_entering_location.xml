<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnteringLocation"
    android:background="@drawable/enteringlocation"
    >

    <Button
        android:id="@+id/CloseRing"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="165dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="144dp"
        android:background="@drawable/okbutton"
        android:fontFamily="serif-monospace"
        android:onClick="CloseRing"
        android:text="ok"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="118dp" />


</RelativeLayout>